<!--Pages/home/home.wxml-->
<text class="title">hello world</text>
<button size="mini">按钮</button>

<!-- 页面跳转 -->
<!-- 1.navigator页面跳转 -->
<navigator url="/Pages/detail/detail">跳转页面</navigator>

<!-- 2.navigator属性：open-type -->
<navigator url="/Pages/detail/detail"
           open-type="redirect">
  跳转页面(redirect)
</navigator>

<navigator url="/Pages/about/about"
           open-type="switchTab">
  跳转到关于页(switchTab)
</navigator>

<navigator url="/Pages/detail/detail"
           open-type="reLaunch">
  跳转到详情页(reLaunch)
</navigator>

<!-- 3.navigator：数据传递 -->
<navigator url="/Pages/detail/detail?name=suchao&age=18&height=1.75">
跳转详情页（数据传递）
</navigator>
<view>{{title}}</view>

<!-- 4.通过代码进行页面的跳转 -->
<button size="mini" bind:tap="handlePushDetail">跳转到详情页</button>