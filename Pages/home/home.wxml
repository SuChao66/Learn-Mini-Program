<!-- 2.自定义组件的样式细节 -->
<!--  
  注意：
    1.自定义组件里不要使用id选择器、属性选择器、标签选择器
    2.组件内的class样式，只对组件wxml内的节点生效，不影响外部的page页面
    3.外部使用class的样式，支队外部wxml的class生效、对组件内的样式没有影响
    4.自定义组件和页面样式可以相互影响，在自定义组件中添加 options: "shared"即可
 -->
<!-- <my-style></my-style> -->

<!-- 3.页面给自定义组件传递数据和样式 -->
<my-prop title="哈哈哈" titleclass="red"/>
<my-prop title="呵呵呵" titleclass="green"/>
<my-prop titleclass="blue"/>

<!-- 4.组件向外传递事件-自定义事件 -->
<view>当前计数：{{counter}}</view>
<!-- 绑定组件发送出来的事件，进行处理 -->
<my-event bind:increment="handleIncrement"/>

<!-- 5.自定义组件tab-control的练习 -->
<w-tab-control titles="{{['衣服', '鞋子', '裤子']}}" bind:itemclick="handleclick"/>

<!-- 6.直接选中组件修改数据/调用方法 -->
<button size="mini" bindtap="handleIncrementCpn">修改组件内的数据</button>
<my-sel id="sel-id"/>

<view>---------------------------------</view>

<!-- 7.插槽的使用 -->
<!-- 7.1单个插槽的使用 -->
<my-slot>
  <button size="mini">我是插入的按钮</button>
</my-slot>
<view>---------------------------------</view>
<my-slot>
  <text>哈哈哈哈</text>
</my-slot>
<view>---------------------------------</view>
<my-slot>
  <slider value="60"></slider>
</my-slot>
<view>---------------------------------</view>
<!-- 7.2多个插槽的使用 -->
<!-- 
  注意事项：
    1.给没一个插槽起一个名字：name属性
    2.必须在component中添加一个选项：options：{multipleSlots: true}
 -->
<my-mslot>
  <button size="mini" slot="slot2">我是插入的按钮</button>
  <slider slot="slot1"/>
  <text slot="slot3">哈哈哈</text>
</my-mslot>